<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4sp"
            android:shrinkColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewRightColumn"
                    android:text="@string/cmpr_txtFirstSection_new"
                    android:textStyle="bold"
                    android:layout_span="2"
                    android:id="@+id/textView2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:textStyle="bold"
                    android:text="@string/cmpr_txtExcRateCurrent_new"
                    android:id="@+id/textView3" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtExcRateNow"
                    android:textColor="@color/colorAccent"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:text="@string/cmpr_txtInPercent"
                    android:id="@+id/textView7" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtPrecentProfitNow" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:text="@string/cmpr_txtInCurOne"
                    android:id="@+id/textView9" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtCurOneProfitNow" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:text="@string/cmpr_txtInCurTwo"
                    android:id="@+id/textView11" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtCurTwoProfitNow" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreyLine">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:id="@+id/greyline" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:textStyle="bold"
                    android:text="@string/cmpr_txtChooseCur"
                    android:id="@+id/textView13" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edtExcRateDinamic" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar" />
                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:text="@string/cmpr_txtInPercent"
                    android:id="@+id/textView15" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtPrecentProfitDinamic" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:text="@string/cmpr_txtInCurOne"
                    android:id="@+id/textView17" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtCurOneProfitDinamic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:text="@string/cmpr_txtInCurTwo"
                    android:id="@+id/textView19" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:id="@+id/txtCurTwoProfitDinamic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreyLine">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:id="@+id/greyline2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/MyViewLeftColumn"
                    android:textStyle="bold"
                    android:text="@string/cmpr_txtNoDiffInProfit"
                    android:id="@+id/textView21" />

                <TextView
                    style="@style/MyViewRightColumn"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/txtExcRateCalc" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewEmptyForScroll" />

            </TableRow>

        </TableLayout>
    </ScrollView>
</FrameLayout>